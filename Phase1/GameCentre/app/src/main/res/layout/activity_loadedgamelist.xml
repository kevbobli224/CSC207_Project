<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@drawable/bg_simplebg2">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:text="Select Loaded Games"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button_debug"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="21dp"
        android:text="Debug: Generate Games" />

    <fall2018.csc2017.slidingtiles.CustomScrollView

        android:id="@+id/scrollable_loadablegames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/button_debug"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="5dp"
        android:nestedScrollingEnabled="true"
        android:padding="5dp"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right"
        android:scrollbarAlwaysDrawVerticalTrack="true">

    </fall2018.csc2017.slidingtiles.CustomScrollView>

    <Button
        android:id="@+id/button_newgame"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_debug"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/button_debug"
        android:text="New Game" />

</RelativeLayout>